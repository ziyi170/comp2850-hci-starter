<li id="task-{{ t.id }}">
  <span>{{ t.title }}</span>
  <form action="/tasks/{{ t.id }}/delete" 
        method="post" 
        style="display:inline"
        hx-post="/tasks/{{ t.id }}/delete" 
        hx-target="#task-{{ t.id }}" 
        hx-swap="outerHTML">
    <button type="submit" aria-label="Delete task: {{ t.title }}">Delete</button>
  </form>
</li> 
